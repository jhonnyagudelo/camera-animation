<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Carama</title>
	<link rel="stylesheet" href="css/camara.css">
	<link rel="stylesheet" href="js/camara.js">
</head>
<body>
	<div class="camara" id="camara">

		<div id="flash" class="flash content"></div>

		<div class="boton" id="boton"></div>

		<div class="colors" id="colors"></div>

		<div class="lente" id="lente"></div>

	</div>

	<div class="panel" id="panel">
		<figure class="foto" id="foto">
			<img src="images/Isotype1-PNG.png" alt="" width="200" class="fotografia" id="fotografia">
		</figure>
		<div class="retrato" id="retrato">Mi Retrato</div>
	</div>
	<div class="sombra" id="sombra"></div>

	<script>
		var $btn = document.getElementById('boton');
		var $camara = document.getElementById('camara');
		var $panel = document.getElementById('panel');
		// var $panelR = document.getElementById('panelR');
		// var $remover = document.getElementById('stir');

		$btn.addEventListener('click', mostrar)
		// $btn.removeEventListener('click',remove)

		function mostrar(){
			camara.classList.toggle('active');
			panel.classList.toggle('active');
		}



	</script>
</body>
</html> 
